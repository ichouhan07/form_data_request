<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_upload_img"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#3034A853"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_upload_thumb"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:text="@string/product_thumbnail_image"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hs_product_images"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scrollbars="none"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="#3034A853"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:id="@+id/emptyImagesLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_desc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="@string/description"
        android:gravity="start"
        android:textSize="13sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/black_light"
        android:layout_gravity="center"
        android:imeOptions="actionDone"
        android:background="#3034A853"
        android:layout_marginHorizontal="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="42dp"
        android:text="@string/save"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="#3034A853"
        android:layout_marginTop="25dp"
        android:includeFontPadding="false"
        android:layout_marginHorizontal="20dp" />

</LinearLayout>