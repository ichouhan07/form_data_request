<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_solid_radius10_bg">
    <ImageView
        android:id="@+id/dialog_select_img_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tv_dialog_select_img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vbk bhsakbfl. hfdhkfn  dkaw"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/black_light"/>
        <TextView
            android:id="@+id/tv_dialog_select_img_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vbk bhsakbfl. hfdhkfn  dkaw"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="1"
                android:id="@+id/dialog_select_img_galley_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@drawable/green_line_radius4_bg"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:text="@string/gallery"
                android:textColor="@color/green" />
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="1"
                android:id="@+id/dialog_select_img_camera_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@drawable/green_line_radius4_bg"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:text="@string/camera"
                android:textColor="@color/green" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>